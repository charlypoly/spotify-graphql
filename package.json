{
  "name": "spotify-graphql",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git://thefrenchhouse/spotify-graphql.git"
  },
  "description": "GraphQL schema for Spotify WebAPI",
  "engineStrict": true,
  "devDependencies": {
    "@types/es6-shim": "^0.31.32",
    "@types/immutable": "^3.8.4",
    "@types/jest": "~15.1.32",
    "@types/node": "~6.0.46",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.1.3",
    "immutable": "^3.8.1",
    "jest": "~17.0.0",
    "rimraf": "~2.5.4",
    "tslint": "~3.15.1",
    "tslint-microsoft-contrib": "~2.0.13",
    "typescript": "~2.0.6"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish '{src,__tests__}/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "npm run test-only",
    "test-only": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "author": "Charly POLY <hello@charlypoly.com>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "<rootDir>/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "<rootDir>(__tests__/).*\\.(test|spec)\\.(ts|js)$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.d.ts"
    ]
  },
  "dependencies": {
    "@types/es6-shim": "^0.31.32",
    "graphql": "^0.7.2",
    "graphql-tools": "^0.8.1",
    "spotify-web-api-node": "^2.3.6"
  }
}
